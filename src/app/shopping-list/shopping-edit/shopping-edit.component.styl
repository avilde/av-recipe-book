.row
  button 
    margin-right: 0.5rem

    &:last-of-type
      margin-right: 0

.row.add-ingredient
  position: relative
  height: 7rem
  margin-bottom: 1rem

  &:before
    position: absolute
    display: flex
    width: 100%
    height: 100%
    background-image: url('/assets/cooking-board-bar.png')
    background-position-x: -35rem
    filter: blur(0.0625rem)
    border-radius: 0.5rem
    z-index: 0

form
  z-index: 1

label
  margin-top: 1rem

label.white-text
  color: white

input 
  border: 0.0625rem solid $color-header-logo

  