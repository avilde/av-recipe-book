div.row
  div.col-xs-10
    app-shopping-edit

hr

div.row
  label Ingredient list
  
  div.no-items(*ngIf="ingredients.length === 0") Add ingredients
  
  ul.list-group(*ngIf="ingredients.length > 0")
    a.list-group-item.shopping-list-item(
      *ngFor='let ingredient of ingredients; let i = index',
      (click)="onEditItem(i)"
    ) {{ ingredient.amount }} {{ ingredient.unit }} {{ ingredient.name }}