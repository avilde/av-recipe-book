div.row
  div.col-xs-12
    app-shopping-edit

hr

div.row.ingredient-list
  label Ingredients list
  
  div.no-items(*ngIf="ingredients.length === 0") Add ingredients
  
  ul.list-group(*ngIf="ingredients.length > 0")
    li.list-group-item.shopping-list-item(
      *ngFor='let ingredient of ingredients; let i = index',
      (click)="onEditItem(i)"
    ) 
      span {{ ingredient.amount }} 
      span {{ ingredient.unit }} 
      span {{ ingredient.name }}