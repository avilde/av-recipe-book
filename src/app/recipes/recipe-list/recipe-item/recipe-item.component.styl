@import 'colors'

.recipe-list-item
  display: flex
  width: 100%
  justify-content: space-between
  align-items: center
  cursor: pointer
  min-height: 4rem
  max-height: 4rem
  overflow: hidden
  margin-bottom: 0.5rem
  
  .list-group-item-heading,
  .list-group-item-text
    height: 1.5rem
    line-height: 1.5rem
    width: 70vw
    max-width: 22rem
    text-overflow: ellipsis
    overflow: hidden
    white-space: pre

  .recipe-list-img
    max-height: 3rem
    max-width 3rem
    border-radius: 0.25rem

  &.active
    background: linear-gradient(to left, $color-header-logo, $color-secondary)
    border-color: $color-primary

    .list-group-item-text
      color: #fff

  .list-group-item-text
    font-size: 0.75rem

  .title, .image
    display: flex

  .title
    overflow: hidden
    flex-direction: column
    flex: 1

  .image
    flex: 0
  
  .image , .image img
    margin: 0
    padding: 0
    width: auto
    height: auto


@media(max-width: 60rem)
  .recipe-list-item
    .list-group-item-heading,
    .list-group-item-text
      max-width: 40rem