.row
  .col-xs-12
    img([src]='recipe.imagePath', alt='{{ recipe.name }}', class='img-responsive')

.row
  .col-xs-12
    h1 {{ recipe.name }}

.row
  .col-xs-12
    .btn-group(appDropdown)
      button.btn.btn-primary.dropdown-toggle.recipe-detail Manage Recipe
        span.caret

      ul.dropdown-menu
        li
          a(href='#') To Shopping List
        li 
          a(href='#') Edit Recipe
        li 
          a(href='#') Delete Recipe

.row.description
  .col-xs-12 {{ recipe.description }}

.row
  .col-xs-12
    ul.list-group
      li.list-group-item(*ngFor="let ingredient of recipe.ingredients") {{ ingredient.name }} - {{ ingredient.amount }}