div.row
  div.col-xs-12
    from('[formGroup]'='recipeForm')
      div.row
        div.col-xs-12
          button.btn.btn-success((click)='onFormSubmit(recipeForm)') Save
          button.btn(type='button') Cancel

      div.row
        div.col-xs-12
          div.form-group
            label(for='name') Name
            input.form-control(type='text', id='name', formControlName='name')

      div.row
        div.col-xs-12
          div.form-group
            label(for='imagePath') Image URL
            input.form-control(type='text', id='imagePath', formControlName='imagePath')

      div.row
        div.col-xs-12
          img.img-responsive(src='')

      div.row
        div.col-xs-12
          div.form-group
          label(for='description') Description
          textarea.form-control(
            type='text',
            id='description', 
            rows='6',
            formControlName='description'
          )
          
      div.row.ingredients
        div.col-xs-12(formArrayName='ingredients')
          div.row(
            [formGroupName]='i',
            *ngFor='let ingredientControl of controls; let i = index'
          )
            div.col-xs-8
              input.form-control(type='text', formControlName='name')
            div.col-xs-2
              input.form-control(type='number', formControlName='amount')
            div.col-xs-2
              button.btn.btn-danger X