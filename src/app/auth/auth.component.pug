div.row.auth
  div.col-xs-12.col-md-6.col-md-offset-3
    div.alert.alert-danger.error(*ngIf='error') {{ error }}

    form(#form='ngForm', (ngSubmit)='onSubmit(form)')
      div.row.text-center
        h1 {{ isLoginMode ? 'Login' : 'Sign Up' }}

      button.btn.btn-success.test(
        (click)='loginWithTestUser()', 
        [disabled]='isLoading',
        *ngIf="isLoginMode"

      )           
        div Login With Test User

      app-loader.auth-loader(*ngIf='isLoading')

      div.form-group
        label(for='email') E-mail
        input.form-control(
          type='email', 
          id='email', 
          ngModel, 
          name='email', 
          required, 
          email,
          [disabled]='isLoading',
          placeholder='Enter e-mail...'
        )

      div.form-group
        label(for='password') Password
        input.form-control(
          type='password', 
          id='password', 
          ngModel, 
          name='password', 
          required, 
          minlength='6',
          [disabled]='isLoading',
          placeholder='Enter password...'
        )

      div.row.buttons
        button.btn.btn-success(type='submit', [disabled]='!form.valid || isLoading') 
          div {{ isLoginMode ? 'Login' : 'Sign Up' }}

        button.btn(
          type='button', 
          (click)='onSwitchMode()', 
          [disabled]='isLoading'
        ) {{ isLoginMode ? 'Go To Sign Up' : 'Go To Login' }}