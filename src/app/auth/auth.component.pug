div.row
  div.col-xs-12.col-md-6.col-md-offset-3
    form(#form='ngForm',  (ngSubmit)='onSubmit(form)')
      div.row.text-center
        h1 {{ isLoginMode ? 'Login' : 'Sign Up' }}

      div.form-group
        label(for='email') E-mail
        input.form-control(
          type='email', 
          id='email', 
          ngModel, 
          name='email', 
          required, 
          email,
          [disabled]='isLoading'
        )

      div.form-group
        label(for='password') Password
        input.form-control(
          type='password', 
          id='password', 
          ngModel, 
          name='password', 
          required, 
          minlength='6',
          [disabled]='isLoading'
        )

      div.row.buttons
        button.btn.btn-primary(type='submit', [disabled]='!form.valid || isLoading') 
          div(*ngIf='!isLoading') {{ isLoginMode ? 'Login' : 'Sign Up' }}
          app-loader(*ngIf='isLoading')

        button.btn(type='button', (click)='onSwitchMode()', [disabled]='isLoading') {{ isLoginMode ? 'Go To Sign Up' : 'Go To Login' }}