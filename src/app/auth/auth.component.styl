@import 'colors'

div.row.buttons
  display: flex
  justify-content: center
  align-items: center
  button
    margin-right: 1.5rem

    &:last-of-type
      margin-right: 0

.auth
  border-radius: 0.5rem
  padding-top: 3rem
  height: 25rem
  max-width: 55rem
  margin-right: auto
  margin-left: auto
  justify-content: center
  align-content: center
  background-image: url('/assets/cooking-board.png')
  background-repeat: none 
  

  form
    input
      border: 0.0625rem solid $color-header-logo

      &:focus
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 0.5rem $color-auth-form-text

    h1, label
      color: $color-auth-form-text
      text-shadow: 1px 1px $color-auth-form-text-shadow

button.test
  align-self: center
  display: flex
  margin-right: auto
  margin-left: auto
  margin-top: 1rem
  margin-bottom: 1rem
